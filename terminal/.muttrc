set markers=no # turn off + in wrapped lines
set pager_index_lines=10

# forward attachments
set mime_forward=yes
set mime_forward_rest=yes

# filetype handling
set mailcap_path = ~/.mutt/mailcap
auto_view text/html
auto_view text/calendar


